	    <li data-target="#tcCarousel" data-slide-to="2"></li>
	    <li data-target="#tcCarousel" data-slide-to="3"></li>
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner">
	    <div class="item active">
		<%= link_to image_tag("tcpx1.png", alt: "Thewter Clone, micropost on feed", class: "img-responsive"), 'https://thewterclone.herokuapp.com', target: :_blank %>
		<div class="carousel-caption">
		    <p>Successful Micropost, with image</p>
		</div>
	    </div>

	    <div class="item">
		<%= link_to image_tag("tcpx2.png", alt: "Account Activation", class: "img-responsive"), 'https://thewterclone.herokuapp.com', target: :_blank %>
		<div class="carousel-caption">
		    <p>Account Activated, Heroku's sendgrid</p>
		</div>
	    </div>

	    <div class="item">
		<%= link_to image_tag("tcpx3.png", alt: "Fake Users", class: "img-responsive"), 'https://thewterclone.herokuapp.com', target: :_blank %>
